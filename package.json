{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "bash scripts/test-setup.sh && bun run test:unit && bun run test:db",
    "test:unit": "bun test lib/ proxy.test.ts",
    "test:setup": "bash scripts/test-setup.sh",
    "test:teardown": "docker compose -f docker-compose.test.yml down --volumes",
    "test:db": "bash scripts/test-setup.sh && bun test --preload ./test-db-setup.ts ./server/orpc/routers/facts.db.test.ts",
    "check": "biome check .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "check:versions": "bun scripts/check-pinned-versions.ts",
    "pre-commit": "bun run check:versions && bun run lint && bun run type-check",
    "vercel:env-pull": "vercel env pull .env.local",
    "install-git-hooks": "bash scripts/install-git-hooks.sh",
    "postinstall": "bun run install-git-hooks",
    "db:setup": "bash scripts/db-setup.sh",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && bash scripts/db-setup.sh",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "migrations:push": "bun run scripts/migrate.ts"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "@neondatabase/serverless": "1.0.2",
    "@orpc/client": "1.13.5",
    "@orpc/server": "1.13.5",
    "@orpc/tanstack-query": "1.13.5",
    "@tanstack/react-query": "5.90.20",
    "better-auth": "1.4.18",
    "clsx": "2.1.1",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "effect": "3.18.4",
    "next": "16.1.6",
    "openai": "6.22.0",
    "postgres": "3.4.8",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "bun-types": "1.2.14",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "25.2.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "10.4.24",
    "drizzle-kit": "0.31.8",
    "nanoid": "5.1.6",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
